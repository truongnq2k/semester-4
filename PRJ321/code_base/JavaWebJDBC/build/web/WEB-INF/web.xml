<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CategoryList</servlet-name>
        <servlet-class>controllers.category.CategoryList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryAddNew</servlet-name>
        <servlet-class>controllers.category.CategoryAddNew</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryDelete</servlet-name>
        <servlet-class>controllers.category.CategoryDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryUpdate</servlet-name>
        <servlet-class>controllers.category.CategoryUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductList</servlet-name>
        <servlet-class>controllers.product.ProductList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductAddNew</servlet-name>
        <servlet-class>controllers.product.ProductAddNew</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDelete</servlet-name>
        <servlet-class>controllers.product.ProductDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductUpdate</servlet-name>
        <servlet-class>controllers.product.ProductUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryList</servlet-name>
        <url-pattern>/categorylist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryAddNew</servlet-name>
        <url-pattern>/categoryaddnew</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryDelete</servlet-name>
        <url-pattern>/categorydelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryUpdate</servlet-name>
        <url-pattern>/categoryupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductList</servlet-name>
        <url-pattern>/productlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductAddNew</servlet-name>
        <url-pattern>/productaddnew</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDelete</servlet-name>
        <url-pattern>/productdelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductUpdate</servlet-name>
        <url-pattern>/productupdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
